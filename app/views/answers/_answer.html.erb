<% user = answer.user %>
<div class='code'>
  <div class="meta">
    <div class="notice">
      <p><%= link_to "@#{user.twitter.screen_name}", user_path(user.id) %>さんが<%= answer.to_ago %>前に投稿しました</p>
    </div>
    <div class="author">
      <% if user %>
        <a href="/users/<%= user.id %>">
          <img src="<%= user.twitter.image_url %>" width='40px' height='40px'>
        </a>
      <% end %>
    </div>
    <div class="fav-star">
      <a class='fav-btn' data-answer-id="<%= answer.id %>" href="javascript:void(0);">
        <% if current_user_faved?(answer) %>
          <img src="/assets/star_full.png">
        <% else %>
          <img src="/assets/star_empty.png">
        <% end %>
      </a>
      <% answer.favs.each do |fav| %>
        <a href="/users/<%= fav.user_id %>">
          <img src="<%= fav.user.twitter.image_url %>" width='24px' height='24px'>
        </a>
      <% end %>
    </div>
    <% if current_user == user %>
      <div class='answer-destroy'>
          <%= link_to "削除", answer_path(answer.id), :data => {:confirm => "この投稿を削除します。よろしいですか?"}, :method => :delete %>
      </div>
    <% end %>
  </div>
  <div class="gist-part">
    <%== answer.body %>
  </div>
</div>
