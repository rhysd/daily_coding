<div class='countdown'>
  <h3>次の問題までの時間</h3>
  <div id='counter'></div>
</div>
<div id='today-problem'>
  <div class='heading'>
    <h2>今日の問題</h2>
  </div>
  <div class='hero-unit' %>
    <%== @today_problem.content %>
    <%= link_to "Project Euler 問題#{@today_problem.id}", @today_problem.url %>
  </div>
</div>
<h2>回答を共有</h2>
<div class='hero-unit' id='gist-url'>
  <div class='url-form'>
    <%= form_tag(answers_path, :id => 'gist-url-form') do %>
      <%= hidden_field_tag 'problem_id', @today_problem.id %>
      <%= select_tag :lang, options_for_select(langs) %></br>
      <%= text_area_tag "content", "", :cols => 80, :rows => 20, :placeholder => "コードを入力してください。" %></br>
      <%= submit_tag "投稿", :class => 'btn btn-primary' %>
      <div id='post-to-twitter-parts'>
        <%= check_box 'twitter_post', '', {}, true, false %>
        <label for='twitter_post'>
          <%= image_tag 'blue_bird.png', :alt => 'Icon-t', :title => 'Twitterに投稿する', :size => '20x20' %>
        </label>
      </div>
    <% end %>
  </div>
  <div id='to-answers'>
    <a class='btn btn-primary btn-large' href=<%= problem_path(@today_problem.id) %>>みんなのコード</a>
  </div>
</div>
