<% if flash[:notice].present? %>
  <div class='notice'>
    <p><%= flash[:notice] %></p>
  </div>
<% end %>

<div class='problem'>
  <ul class='pager'>
    <% if @problem.id > 1 %>
    <li class='previous'>
      <%= link_to "<<", problem_path(@problem.id - 1) %>
    </li>
    <% end %>
    <li>
      <h2>問題<%= @problem.id %></h2>
    </li>
    <% if @problem.id != Problem.today.id %>
    <li>
      <%= link_to ">>", problem_path(@problem.id + 1) %>
    </li>
    <% end %>
  </ul>
  <div class='hero-unit'>
    <%== @problem.content %>
    <%= link_to "Project Euler 問題#{@problem.id}", @problem.url %>
  </div>
</div>

<div class='heading'>
  <h2>みんなのコード</h2>
</div>

<div class='hero-unit'>
  <ul class="nav nav-pills" id='lang-selector'>
    <li class="active">
      <a id="all-lang" class= "lang-btn" href="javascript:void(0);" data-href="<%= tmpl_answers_path(@problem.id) %>">ALL</a>
    </li>
    <% @langs.each do |lang| %>
    <li>
      <a class="lang-btn" data-href="<%= tmpl_answers_by_lang_path(@problem.id, lang) %>" href="javascript:void(0);" ><%= lang %></a>
    </li>
    <% end %>
  </ul>

  <div id='answers-body' class='answers'>
    <%= render partial: 'answers/answer', spacer_template: 'answers/sep', collection: @answers %>
  </div>
</div>
